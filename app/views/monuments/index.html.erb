<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div data-controller="insert-in-list">

  <div id="monuments" data-insert-in-list-target='items'>
    <% @monuments.each do |monument| %>
      <%= render monument %>
      <p>
        <%= link_to "Show this monument", monument %>
      </p>
    <% end %>
  </div>

  <div data-controller="toggle">
    <button class='btn btn-success' data-action="click->toggle#fire">New monument</button>
    <div class='d-none' data-toggle-target='toggableElement'>
      <%= render partial: 'form', locals: {monument: @monument}  %>
    </div>

  </div>

</div>
